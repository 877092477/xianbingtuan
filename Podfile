platform:ios,'8.0'
inhibit_all_warnings!

# ruby语法
# target数组 如果有新的target直接加入该数组


targetsArray = ['馅饼团精选']

# 循环
targetsArray.each do |t|
    target t do
        pod 'Reachability',  '~> 3.1.1'
        pod 'AFNetworking', '~> 2.0’
        pod 'SDWebImage',    '= 3.7.5’
        pod 'IQKeyboardManager'
        pod 'SVProgressHUD', '2.2.5'
        pod 'SDAutoLayout', '~> 2.2.0'
        pod 'pop', '~> 1.0'
        pod 'MJRefresh', '~>3.1'
        pod 'MJExtension'
        pod 'KVNProgress'
        pod 'SDCycleScrollView','~> 1.61'
        pod 'MBProgressHUD', '~> 0.9.2'
        # U-Share SDK UI模块（分享面板，建议添加）
        pod 'UMengUShare/UI'
        # 集成微信(完整版14.4M)
#        pod 'UMengUShare/Social/WeChat'
        pod 'UMengUShare/Social/ReducedWeChat’
        # 集成QQ(完整版7.6M)
        pod 'UMengUShare/Social/QQ'
        # 集成新浪微博(完整版25.3M)
        pod 'UMengUShare/Social/Sina'
        #UMeng Analytics iOS SDK
        pod 'UMCCommon'
        pod 'UMCAnalytics'
        #pod 'UMCSecurityPlugins'
        pod 'UMCCommonLog'

        pod 'FDFullscreenPopGesture'
        #pod 'Bugly'
        pod 'VTMagic'
        #pod 'KMNavigationBarTransition'
        pod 'ReactiveCocoa'
        pod "FHHFPSIndicator"
        pod 'LJContactManager'
        # Emoji表情输入
        pod 'AGEmojiKeyboard'
        # SQLite ORM
        pod 'LKDBHelper'
        # 图片选择
        pod 'TZImagePickerController'
        pod 'Popover.OC'
        pod 'EBBannerView'
        pod 'JPVideoPlayer'
        pod 'lottie-ios'
        # 高德地图
        pod 'AMap2DMap'
        pod 'AMapSearch'
        pod 'AMapLocation'
        
        # 处理友盟与微信支付冲突 https://www.cnblogs.com/zhou--fei/p/10257730.html
        pod 'WechatOpenSDK'
    end
end
